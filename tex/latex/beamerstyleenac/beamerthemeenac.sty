    -- ++(-\dxx, 0) -- ++(\dxx-\dx, -\dy) -- cycle;
    \node[anchor = south east, yshift = 4.5ex] at (current page.south east)
    {\resizebox{0.7cm}{!}{\color{white}\textbf{www.enac.fr}}};
  \end{tikzpicture}%
}

