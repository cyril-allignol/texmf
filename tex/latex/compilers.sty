%% T-diagrams

\newlength{\s}
\setlength{\s}{1.8em}

\NewDocumentCommand{\Tcompiler}{mmm}{%
  \coordinate (O);
  \draw[thick] (O) ++(-1.5\s, 0.5\s) -- ++(3\s, 0) -- ++(0, -\s) --
  ++(-\s, 0) -- ++(0, -\s) -- ++(-\s, 0) -- ++(0, \s) -- ++(-\s, 0) -- cycle;
  \node at ($ (O) + (-\s, 0) $) {#1};
  \node at ($ (O) + (\s, 0) $) {#2};
  \node at ($ (O) + (0, -\s) $) {#3};
}

\NewDocumentCommand{\Tmachine}{m}{%
  \coordinate (O);
  \node at ($ (O) + (0, 0.15\s) $) {#1};
  \draw[thick] (O) ++(-0.75\s, 0.5\s) -- ++(1.5\s,0) -- ++(-0.75\s,-\s) -- cycle;
}

\NewDocumentCommand{\Tvm}{mm}{%
  \node (O) {#2};
  \node at ($ (O) + (0, \s) $) {#1};
  \draw[thick] (O) ++(-0.5\s, 1.5\s) -- ++(\s, 0) -- ++(0, -2\s) --
  ++(-\s, 0) -- cycle;
}

\NewDocumentCommand{\Tprogram}{mm}{%
  \node (O) {#2};
  \node at ($ (O) + (0, 0.8\s) $) {#1};
  \draw[thick] (O) ++(-0.5\s, 1.5\s) arc (-120:-60:\s) -- ++(0, -2\s) --
  ++(-\s, 0) -- cycle;
}

\NewDocumentCommand{\Tdata}{m}{%
  \node (O) {#1};
  \draw[thick] (O) ++(-0.5\s, -0.5\s) arc (-120:-60:\s) -- ++(0, \s) --
  ++(-\s, 0) -- cycle;
}

